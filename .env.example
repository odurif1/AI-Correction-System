# ===========================================
# AI Correction System - Configuration
# ===========================================

# -------------------------------------------
# Provider principal
# -------------------------------------------
# Options: "gemini" ou "openai"
AI_CORRECTION_AI_PROVIDER=gemini

# -------------------------------------------
# Google Gemini API
# -------------------------------------------
# Get your API key from: https://aistudio.google.com/app/apikey
AI_CORRECTION_GEMINI_API_KEY=your_gemini_api_key_here
AI_CORRECTION_GEMINI_MODEL=gemini-2.5-flash
AI_CORRECTION_GEMINI_VISION_MODEL=gemini-2.5-flash

# -------------------------------------------
# OpenAI API (alternative)
# -------------------------------------------
# AI_CORRECTION_OPENAI_API_KEY=your_openai_api_key_here
# AI_CORRECTION_OPENAI_MODEL=gpt-4o
# AI_CORRECTION_OPENAI_VISION_MODEL=gpt-4o

# -------------------------------------------
# Mode Comparaison (Double LLM)
# -------------------------------------------
# Activer le mode comparaison avec 2 LLM
AI_CORRECTION_COMPARISON_MODE=false

# LLM 1 (principal)
AI_CORRECTION_LLM1_PROVIDER=gemini
AI_CORRECTION_LLM1_MODEL=gemini-2.5-flash

# LLM 2 (comparaison)
AI_CORRECTION_LLM2_PROVIDER=openai
AI_CORRECTION_LLM2_MODEL=gpt-4o

# -------------------------------------------
# Seuils de confiance
# -------------------------------------------
# Note automatique si confiance >= ce seuil
AI_CORRECTION_CONFIDENCE_AUTO=0.85

# Demande validation si confiance < ce seuil
AI_CORRECTION_CONFIDENCE_FLAG=0.60

# -------------------------------------------
# Stockage
# -------------------------------------------
AI_CORRECTION_DATA_DIR=data

# -------------------------------------------
# Options avancées
# -------------------------------------------
# Langue par défaut pour les prompts (fr ou en)
AI_CORRECTION_LANGUAGE=fr

# Activer le consensus de lecture (Phase 1)
AI_CORRECTION_READING_CONSENSUS=false
