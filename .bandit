# bandit configuration for La Corrigeuse
# https://bandit.readthedocs.io/

exclude_dirs:
  - /tests
  - /.venv
  - /node_modules

tests:
  # Python-specific security checks
  - B201  # flask_debug_true (check for DEBUG=True)
  - B301  # pickle (unsafe deserialization)
  - B302  # marshal (unsafe deserialization)
  - B303  # md5 (weak hash)
  - B304  # ciphers (weak cryptography)
  - B305  # cipher_modes (weak encryption modes)
  - B306  # mktemp_q (insecure temp file)
  - B307  # eval (dangerous eval)
  - B308  # mark_safe (XSS in Django templates - N/A but keep)
  - B309  # httpsconnection (HTTPS verification)
  - B310  # urllib_urlopen (unsafe URL opening)
  - B311  # random (weak random)
  - B312  # telnetlib (insecure protocol)
  - B313  # xml_bad_cElementTree (XML vulnerabilities)
  - B314  # xml_bad_ElementTree (XML vulnerabilities)
  - B315  # xml_bad_expatreader (XML vulnerabilities)
  - B316  # xml_bad_expatbuilder (XML vulnerabilities)
  - B317  # xml_bad_sax (XML vulnerabilities)
  - B318  # xml_bad_minidom (XML vulnerabilities)
  - B319  # xml_bad_pulldom (XML vulnerabilities)
  - B320  # xml_bad_etree (XML vulnerabilities)
  - B321  # ftplib (FTP usage)
  - B323  # unverified_context (SSL verification)
  - B324  # hashlib_new_insecure_functions (md4, md5, sha)
  - B325  # tempnam (insecure temp file)
  - B401  # import_telnetlib
  - B402  # import_ftplib
  - B403  # import_pickle
  - B404  # import_subprocess
  - B405  # import_xml_etree
  - B406  # import_xml_sax
  - B407  # import_xml_expat
  - B408  # import_xml_minidom
  - B409  # import_xml_pulldom
  - B410  # import_lxml
  - B411  # import_xmlrpclib
  - B412  # import_httpoxy
  - B413  # import_pycrypto (deprecated)
  - B501  # request_with_no_cert_validation
  - B502  # ssl_with_bad_version
  - B503  # ssl_with_bad_defaults
  - B504  # ssl_with_no_version
  - B505  # weak_cryptographic_key
  - B506  # yaml_load (unsafe YAML loading)
  - B507  # ssh_no_host_key_verification
  - B601  # paramiko_calls (SSH)
  - B602  # subshell_call (subprocess with shell=True)
  - B603  # subprocess_without_shell_equals_true
  - B604  # any_other_function_with_shell_equals_true
  - B605  # start_process_with_a_shell
  - B606  # start_process_with_no_shell
  - B607  # start_process_with_partial_path
  - B608  # hardcoded_sql_expressions
  - B609  # linux_commands_wildcard_injection
  - B610  # django_extra_used (N/A)
  - B611  # django_rawsql_used (N/A)
  - B701  # jinja2_autoescape_false (XSS)
  - B702  # use_of_mako_templates (potential XSS)
  - B703  # django_mark_safe (N/A)
